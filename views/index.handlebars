
<div>
    <h1 class="card z-depth-3 center-align">Read the Latest from Esquire</h1>
    <div class="row">
        <div class="col s3"></div>
        <h5 class="card z-depth-3 center-align col s6">Click 'Scrape' to get the latest articles</h5>
    </div>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s10 left-align">
        {{#each article}}
        <div class="card-panel">
    <div class="row">
                <div class="col s5">
            <h4>{{this.title}}</h4>
            <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp">Read Article</a>
            </div>

            <div class="col s7">
            <img src="{{this.image}}" alt="">
            </div>
    </div>
        </div>

        {{/each}}
    </div>
</div>